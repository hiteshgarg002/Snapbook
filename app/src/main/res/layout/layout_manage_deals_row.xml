<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@color/light_gray"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Posted on "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:id="@+id/dateOnMD"
                android:text="10-04-2018"/>

        </LinearLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="Redmi Note 4"
                android:textStyle="bold"
                android:id="@+id/nameOnMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/ic_action_delete"
                    android:tint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteOnMD"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorLightGray"
                android:id="@+id/categoryOnMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics"/>

            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:textColor="@color/colorLightGray"
                android:id="@+id/statusOnMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"/>

            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:textColor="@color/colorLightGray"
                android:id="@+id/conditionOnMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"/>

            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:textColor="@color/colorLightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rs"/>

            <TextView
                android:textColor="@color/colorLightGray"
                android:id="@+id/costOnMD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6500"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>