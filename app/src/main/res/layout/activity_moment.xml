<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBarColor"
    tools:context="com.hrrock.snapbook.activities.MomentActivity">

    <RelativeLayout
        android:id="@+id/rel_momentVP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/moment_tabs">

        <android.support.v4.view.ViewPager
            android:id="@+id/momentVP"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/moment_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/snippet_moment_tabs" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true">

        <include layout="@layout/snippet_bottom_navigation_view_ex" />

    </RelativeLayout>

</RelativeLayout>
